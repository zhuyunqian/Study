/* pages/ky/ky.wxss */
/* 设置滚动区域高度 */
scroll-view{
    height:800rpx;
}

/*hidden scroll-view的 滚动条*/
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color:transparent;
}

.box{
    display:flex;
    flex-direction:column;
    align-items: center;
    height:400rpx;
    color:#fff;
}
.box image{
    margin:20rpx auto 0;
    width:100rpx;
    height:100rpx;
}
.box view{
    text-align:center;
}
.title{
    font-size:38rpx;
    margin-top:100rpx;
}
.con{
    font-size:32rpx;
    margin-top:20rpx;
}