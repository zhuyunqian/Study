/* pages/home/home.wxss */
.title{
    font-size:32rpx;
    text-align: center;
    margin:30rpx 0;
}
.search{
    background:#fff;
    padding-top:20rpx;
    height:100rpx;
    width:100%;
}
.searchInp{
    width:90%;
    height:80rpx;
    line-height:80rpx;
    margin-top:20rpx;
    background:#f6f6f6;
    margin:0 auto;
    text-align:center;
    border-radius:50rpx;
    display: flex;
    align-items:center;
    text-align:center;
    position: relative;
    
}
.searchInp icon{
   position:absolute;
   left:25%;
   top:15rpx;

}
.searchInp .weui-input{
    width:100%;
    text-align:center;
    font-size:28rpx;
}

.con{
   
}
scroll-view{
    display:flex;
    padding:0 0 0 80rpx;
}
.book{
    flex:2;
    width:240rpx;
    float: left;
    margin:0 100rpx 60rpx 0;
    box-shadow: 1rpx 2rpx 10rpx 10rpx #ddd;
}
.book:nth-child(2n-1){
    margin-left:20rpx;
}
.book image{
    width:100%;
    height:220rpx;
    display:block;
    border-radius:15rpx 15rpx 0 0;
}
.book .txt{
    background:#fff;
    height:140rpx;
    border-radius:0 0 15rpx 15rpx;
    color:#333;
    display: flex;
    flex-direction: column;
    padding:0 20rpx;
}
.txt .tit{
    font-size:30rpx;
    flex:1;
}
.txt .name,.txt .more{
    font-size:28rpx;
    color:#999;
    flex:1;
}
.txt .more{
    text-align:right;
    font-size:26rpx;
}